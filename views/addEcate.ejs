<%-include('header')%>

<div class="col-xxl">
    <div class="card mb-4">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Basic with Icons</h5> <small class="text-muted float-end">Merged input group</small>
      </div>
      <div class="card-body">
        <form action="/admin/ecate/insertEcategoryData" method="post">
            <div class="card-box">
                <div class="form-group mb-3">
                    <label for="product-category">Category<span class="text-danger">*</span></label>
                    <select class="form-select" name="category" id="product-category" onchange="return getsubcat()">
                        <option>Select</option>
                        <% cateData.map((v,i)=>{%>
                        <option value="<%=v.id%>"><%=v.cateName%></option>
                        <%})%>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="product-category">Sub Category<span class="text-danger">*</span></label>
                    <select class="form-select" name="subcategory" id="product-subcategory" >
                        <option>Select</option>
                        <% scateData.map((v,i)=>{%>
                        <option value="<%=v.id%>"><%=v.scateName%></option>
                        <%})%>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="product-name">Extra Category Name <span class="text-danger">*</span></label>
                    <input type="text" id="product-name" name="ecateName" class="form-control" placeholder="e.g : Mobile">
                </div>

               
            </div>
            <div class="text-center mb-3" style="transform: translateX(260px);">
                <button type="reset" class="btn w-sm btn-danger waves-effect">Reset</button>
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </form>
      </div>
    </div>
  </div>

<%-include('footer')%>