<%-include('header')%>

<div class="card">
    <h5 class="card-header">Responsive Table</h5>
    <div class="table-responsive text-nowrap">
      <table class="table">
        <thead>
          <tr>
            
            <th>Category</th>
            <th>Subcategory</th>
            <th>Extracategory</th>
            <th>Brand</th>
            <th>Type</th>
            <th>Product</th>
            <th>Image</th>
            <th>Multi Image</th>
            
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
            <% if(productData !="" ){ %>
                <% for(var pd of productData ){ %>
                    <tr class="">
                       
                        <td>
                            <%=pd.category.cateName%>
                        </td>
                        <td>
                            <%=pd.subcategory.scateName%>
                        </td>
                        <td>
                            <%=pd.extracategory.ecateName%>
                        </td>
                        <td>
                            <%=pd.brandname.brandname%>
                        </td>
                        <td>
                            <%= pd.typeName.typeName %>
                        </td>
                        <td>
                            <%= pd.product_title %>
                        </td>
                        <td>
                            <img src="<%=pd.ProductImage %>" height="40" alt="">
                        </td>
                        <td>
                            <div class="mydiv2" style="display: flex;">
                                <%for(var i = 0; i<pd.multipleproductimage.length;i++){%>
                                    <div class="mydiv" style="position: relative; width: auto; margin: 0px 10px;" >
                                    <img style="position: relative; " src="<%=pd.multipleproductimage[i] %>" height="40" alt="" >
                                    <button style="border: none; border: 0; z-index: 9; top: -5px; right: -7px; background-color: transparent !important; position: absolute;"  onclick="return deleteimg('<%=pd.id%>','<%=i%>','<%=pd.multipleproductimage[i] %>')"><img src="/img/icons/close.png" style="width: 20px;" alt=""></button>
                                    <!-- <button style="border: none; border: 0; z-index: 9; top: -5px; left: -7px; background-color: transparent !important; position: absolute;"  onclick="return editimg('<%=pd.id%>','<%=i%>','<%=pd.multipleproductimage[i] %>')"><img src="/img/icons/pen.png" style="width: 20px;" alt=""></button> -->
                                    <a href="/admin/product/editimg?id=<%=pd.id%>&i=<%=i%>&img=<%=pd.multipleproductimage[i] %>" style="border: none; border: 0; z-index: 9; top: -5px; left: -7px; background-color: transparent !important; position: absolute;"><img src="/img/icons/pen.png" style="width: 20px;" alt=""></a>
                                 </div>
                                <%}%>
                            </div>    
                           
                        </td>
                        
                            <%if(pd.IsActive){%>
                                <td><a href="/admin/product/isActive/<%=pd.id%>" title="IsActive"  class="badge rounded-pill bg-label-primary me-1" style="border-radius: 45%;">Active</i></a></td>
                                <%} else{%>
                                    <td><a href="/admin/product/deActive/<%=pd.id%>" title="DeActive"  class="badge rounded-pill bg-label-danger me-1" style="border-radius: 45%;">DeActive</a></td>
                                <%}%>
                        
                        <td>
                            <div class="dropdown">
                              <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="mdi mdi-dots-vertical"></i></button>
                              <div class="dropdown-menu">
                                <a class="dropdown-item" href="/admin/product/updateproduct/<%=pd.id%>"><i class="mdi mdi-pencil-outline me-1"></i> Edit</a>
                                <a class="dropdown-item" href="/admin/product/deletAdmin/<%=pd.id%>"><i class="mdi mdi-trash-can-outline me-1"></i> Delete</a>
                              </div>
                            </div>
                          </td>
                        <% }%>
                            <% }else{ %>
                    <tr>
                        <div style="background-color: #fff !important; text-align: center; display: flex; justify-content: center; align-items: center; width: 100%; height: 70px;" >
                            <h4 style="color: #6c757d;">No Record Found</h4>
                        </div>
                    </tr>
                    <% } %>
                        </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row" style="margin-right: 0 !important;">
    <div class="col-12">
        <ul class="pagination pagination-rounded justify-content-end mb-3">
            <li class="page-item">
                <% var prevPage = parseInt(currentPage)-1%>
                <% if(prevPage>=0){%>
                    <a class="page-link" href="?page=<%=prevPage%>" aria-label="Previous">
                        <span aria-hidden="true">«</span>
                        <span class="sr-only">Previous</span>
                    </a>
                <%}%>
            </li>
            <%for (var i=0; i<totaldocument; i++){%>
                <li class="page-item <%if(currentPage==i){%> <%='active'%> <%}%>"><a class="page-link" href="?page=<%=i%>&search=<%=searchValue%>"><%=i+1%></a></li>
            <%}%>
            <% var nextPage = parseInt(currentPage)+1%>
            <li class="page-item">
                <% if (totaldocument>nextPage){%>
                    <a class="page-link" href="?page=<%=nextPage%>" aria-label="Next">
                        <span aria-hidden="true">»</span>
                        <span class="sr-only">Next</span>
                    </a>
                <%}%>
                </li>
        </ul>
    </div> <!-- end col-->
</div>
  <!--/ Basic Bootstrap Table -->
  
  <hr class="my-5">

<%-include('footer')%>