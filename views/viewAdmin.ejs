<%- include('header')%>

<div class="content-wrapper">

  <!-- Content -->
  
    <div class="container-xxl flex-grow-1 container-p-y">
      
      
<h4 class="py-3 mb-4">
<span class="text-muted fw-light">User Profile /</span> Connections
</h4>

<!-- Header -->
<div class="row">
<div class="col-12">
<div class="card mb-4">
<div class="user-profile-header-banner">
  <img src="/img/pages/profile-banner.png" width="100%" alt="Banner image" class="rounded-top">
</div>
<div class="user-profile-header d-flex flex-column flex-lg-row text-sm-start text-center mb-4">
  <div class="flex-shrink-0 mt-n2 mx-lg-0 mx-auto" style="width: auto;" >
    <img src="<%=locals.user.adminImage%>" width="100px" alt="user image" class="d-block h-auto ms-0 ms-sm-4 rounded user-profile-img">
  </div>
  <div class="flex-grow-1 mt-3 mt-lg-5">
    <div class="d-flex align-items-md-end align-items-sm-start align-items-center justify-content-md-between justify-content-start mx-4 flex-md-row flex-column gap-4">
      <div class="user-profile-info">
        <h4><%=locals.user.name%></h4>
        <ul class="list-inline mb-0 d-flex align-items-center flex-wrap justify-content-sm-start justify-content-center gap-2">
          <li class="list-inline-item">
            <i class='mdi mdi-invert-colors me-1 mdi-20px'></i><span class="fw-medium"><%=locals.user.gender%></span>
          </li>
          <li class="list-inline-item">
            <i class='mdi mdi-map-marker-outline me-1 mdi-20px'></i> <span class="fw-medium"><%=locals.user.city%></span>
          </li>
          <li class="list-inline-item">
            <i class='mdi mdi-calendar-blank-outline me-1 mdi-20px'></i> <span class="fw-medium"> Joined <%=locals.user.currentDate.slice(0,10)%></span></li>
        </ul>
      </div>
      <a href="javascript:void(0)" class="btn btn-primary">
        <i class='mdi mdi-account-check-outline me-1'></i>Connected
      </a>
    </div>
  </div>
</div>
</div>
</div>
</div>
<!--/ Header -->

<!-- Navbar pills -->
<div class="row">
<div class="col-md-12">
<ul class="nav nav-pills flex-column flex-sm-row mb-4">
<li class="nav-item"><a class="nav-link" href="/admin/profile"><i class='mdi mdi-account-outline me-1 mdi-20px'></i> Profile</a></li>

<li class="nav-item"><a class="nav-link active" href="/admin/viewAdmin"><i class='mdi mdi-link me-1 mdi-20px'></i> Admins</a></li>
</ul>
</div>
</div>
<!--/ Navbar pills -->
<form>
  <label for="inputPassword2" class="sr-only">Search</label>
  <input type="search" class="form-control" id="inputPassword2" placeholder="Search..." name="search" value="<%=searchValue%>">
  <button type="submit" title="Click here to search" value="search" style="border: none; background-color: transparent;
      transform: translateX(-30px); font-size: 16px; color: #6c757d;"><i class="fe-search"></i>
  </button>
</form>
<!-- Connection Cards -->
<div class="row g-4">
 




  <%if(adminData != ''){%>
    <%for(var ad of adminData){%>
<div class="col-xl-4 col-lg-6 col-md-6">
<div class="card">
<div class="card-body text-center">
  <div class="dropdown btn-pinned">
    <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical mdi-24px text-muted"></i></button>
    <ul class="dropdown-menu dropdown-menu-end">
      <li><a class="dropdown-item" href="/admin/updateAdmin/<%=ad.id%>">Update</a></li>
      
      <li>
        <hr class="dropdown-divider">
      </li>
      <li><a class="dropdown-item text-danger" href="/admin/deletAdmin/<%=ad.id%>">Delete</a></li>
    </ul>
  </div>
  <div class="mx-auto mb-4">
    <img src="<%=ad.adminImage%>" alt="Avatar Image" class="rounded-circle w-px-100" />
  </div>
  <h5 class="mb-1 card-title"><%=ad.name%></h5>
  <span><%=ad.email%></span>
  <div class="d-flex align-items-center justify-content-center my-4 gap-2">
    <a href="javascript:;" class="me-2"><span class="badge bg-label-info rounded-pill"><%=ad.hobby[0]%></span></a>
    <a href="javascript:;" class="me-2"><span class="badge bg-label-danger rounded-pill"><%=ad.hobby[1]%></span></a>
    <a href="javascript:;"><span class="badge bg-label-primary rounded-pill"><%=ad.hobby[2]%></span></a>
  </div>

  <div class="d-flex align-items-center justify-content-around mb-4">
    <div>
      <h5 class="mb-1"><%=ad.gender%></h5>
      <span>Gender</span>
    </div>
    <div>
      <h5 class="mb-1"><%=ad.city%></h5>
      <span>City</span>
    </div>
    <div>
      <h5 class="mb-1"><%=ad.currentDate.slice(0,10)%></h5>
      <span>Joining</span>
    </div>
  </div>
  <div class="d-flex align-items-center justify-content-center">
    <%if(ad.isActive){%>
      <a href="/admin/isActive/<%=ad.id%>" class="btn btn-danger d-flex align-items-center me-3"><i class="mdi mdi-account-check-outline me-1"></i>DeActive</a>
      <%} else{%>
        <a href="/admin/deActive/<%=ad.id%>" class="btn btn-primary d-flex align-items-center me-3"><i class="mdi mdi-account-check-outline me-1"></i>Active</a>
      <%}%>
      
    <a href="javascript:;" class="btn btn-outline-secondary btn-icon"><i class="mdi mdi-email-outline"></i></a>
  </div>
</div>
</div>
</div>


<%}%>
                        <%} else{%>
                            <div style="background-color: #fff !important; text-align: center; display: flex; justify-content: center; align-items: center; width: 100%; height: 70px;" >
                                <h4 style="color: #6c757d;">No Record Found</h4>
                            </div>
                        <%}%>

</div>
<!--/ Connection Cards -->

    </div>
    <!-- / Content -->

    
    
<%- include('footer')%>